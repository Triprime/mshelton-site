<h2>Welcome to my home page</h2>

<div>
  <p>This is my personal site</p>
</div>

<% if @post.present? %>
<div>
  <h1>Featured Post</h1>
  
  <h3> <%= link_to @post.title, post_path(@post) %> </h3>
  
  <p><em><%= @post.author %></em> | <%= time_tag( @post.published_at) %></p>

  <p><%= simple_format( truncate(@post.body, length: 280, separator: ".", omission: "... #{ link_to 'continue reading', post_path(@post) }") ) %></p>
</div>
<% end %>

