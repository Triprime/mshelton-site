    <%= f.label :title %>
    <%= f.text_field :title %>
    <hr>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    <hr>
    <%= f.label :published_at %>
    <%= f.datetime_select :published_at %>
    <hr>
    <%= f.label :featured %>
    <%= f.check_box :featured %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

