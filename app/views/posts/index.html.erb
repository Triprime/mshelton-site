<div class="page-header">
  <h1>My amazing blog!
    <div class="pull-right">
      <%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-sm" %>     
    </div>
  </h1>
</div>


<% @posts.each do |post| %>
  <div class = "well">
    <div class="post">
      <div class="pull-right">
        <%= link_to 'Show', post, class: "btn btn-primary btn-sm" %> 
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary btn-sm"%>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary btn-sm" %>
      </div>

      <h2> <%= post.title %> 
        <small><%= display_tags(post) %></small>
      </h2>

      <p><em><%= post.author %></em> | <%= time_tag(post.published_at) %></p>

      <p><%= post.body %></p>
      
    </div>
  </div>
<% end %>


