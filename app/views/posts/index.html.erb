<h2>My amazing blog!</h2>

<nav>
<div class="wrapper">
    <ul class="menu" rel="sam1">
        <li class="item"> <%= link_to 'New Post', new_post_path %> </li>
    </ul>    
</div>
</nav>


<% @posts.each do |post| %>

<div class="post">
    <h1> <%= post.title %> </h1>
    <p><em><%= post.author %></em> | <%= post.published_at %></p>
    <%= post.body %>
    <br>
    Featured: <%= post.featured %>
    <br>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <br><br>
</div>
<% end %>


